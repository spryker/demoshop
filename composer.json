  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "use-include-path": true,
    "process-timeout": 600
  },
  "repositories": [
    {
      "type": "git",
      "url": "git@github.com:spryker/spryker.git"
    }
  ],
  "scripts": {
    "compile": [
      "mkdir -p ./data/DE/logs",
      "echo '<?php return \"development_heroku\";' > config/Shared/console_env_local.php"
    ]
