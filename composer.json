{
  "name": "spryker/project",
  "description": "Project",
  "license": "MIT",
  "require": {
    "spryker/spryker": "dev-feature/core-2271-fix-sniffer-and-dependency-checker-for-sdk-and-eco",
    "spryker-eco/loggly": "dev-master",
    "spryker/rabbit-mq": "dev-master",
    "spryker/install": "dev-master",

    "php": ">=7.1",
    "braintree/braintree_php": "~3.15.0",
    "guzzlehttp/guzzle": "^6.2.1",
    "league/csv": "^8.1.0",
    "filp/whoops": "^2.1",
    "mandrill/mandrill": "~1.0.55",
    "monolog/monolog": "^1.21.0",
    "nesbot/carbon": "~1.13.0",
    "pimple/pimple": "~1.1.1",
    "predis/predis": "^1.1.1",
    "propel/propel": "2.0.0-alpha7",
    "psr/log": "^1.0.0",
    "ruflin/elastica": "^3.2.0",
    "silex/silex": "^1.3.5",
    "symfony-cmf/routing": "^1.3.0",
    "symfony/console": "^3.0.0",
    "symfony/debug": "^2.6.13 || ^3.0.0",
    "symfony/filesystem": "^2.6.13 || ^3.0.0",
    "symfony/finder": "^2.6.13 || ^3.0.0",
    "symfony/form": "^2.7.0",
    "symfony/http-kernel": "^2.6.13 || ^3.0.0",
    "symfony/intl": "^2.8.8 || ^3.0.0",
    "symfony/options-resolver": "^2.6.13 || ^3.0.0",
    "symfony/process": "^2.6.13 || ^3.0.0",
    "symfony/property-access": "^2.6.13 || ^3.0.0",
    "symfony/routing": "^2.6.13",
    "symfony/security": "^2.6.13",
    "symfony/serializer": "^2.6.13 || ^3.0.0",
    "symfony/translation": "^2.6.13 || ^3.0.0",
    "symfony/twig-bridge": "^2.7.0",
    "symfony/validator": "^2.6.13",
    "symfony/yaml": "^2.6.13 || ^3.0.0",
    "swiftmailer/swiftmailer": "^5.4.5",
    "twig/twig": "^1.20.0",
    "zendframework/zend-config": "^3.1.0",
    "zendframework/zend-filter": "^2.5.1",
    "zendframework/zend-servicemanager": "^3.3",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-gmp": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mcrypt": "*",
    "ext-pdo_pgsql": "*",
    "ext-pgsql": "*",
    "ext-readline": "*",
    "ext-redis": "*",
    "league/flysystem": "^1.0",
    "egulias/email-validator": "^2.1.2"
  },
  "require-dev": {
    "spryker/architecture-sniffer": "dev-master",
    "spryker/code-generator": "dev-master",
    "spryker/code-sniffer": "dev-master",
    "spryker/git-hook": "dev-master",

    "codeception/codeception": "^2.3.5",
    "phpunit/phpunit": "^5.0",
    "pdepend/pdepend": "^2.2.2",
    "phploc/phploc": "^3.0.1",
    "phpmd/phpmd": "^2.4",
    "sebastian/phpcpd": "^2.0.2",
    "sensiolabs/security-checker": "^3.0.2",
    "silex/web-profiler": "^1.0.8",
    "symfony/web-profiler-bundle": "*",
    "symfony/var-dumper": "*",
    "site5/phantoman": "^1.1",
    "sllh/composer-versions-check": "^2.0.2",
    "jakoch/phantomjs-installer": "^2.1.0",
    "doctrine/instantiator": "~1.0.5",
    "stecman/symfony-console-completion": "^0.7.0",
    "fzaninotto/faker": "^1.6",
    "nette/php-generator": "^2.6.1",
    "phpunit/php-token-stream": "^1.4.11",
    "phpdocumentor/reflection-docblock": "^2.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-0": {
      "": "src/"
    },
    "files": [
      "vendor/spryker/spryker/autoload.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PyzTest\\": "tests/PyzTest/",
      "PhpStan\\": "tests/PhpStan/"
    },
    "files": [
      "test-autoload.php"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "use-include-path": true,
    "process-timeout": 600
  },
  "repositories": [
    {
      "type": "git",
      "url": "git@github.com:spryker/spryker.git"
    },
    {
      "type": "git",
      "url": "git@github.com:spryker/git-hook.git"
    },
    {
      "type": "git",
      "url": "git@github.com:spryker/install.git"
    },
    {
      "type": "composer",
      "url": "https://code.spryker.com/repo/private"
    }
  ],
  "scripts": {
    "compile": [
      "mkdir -p ./data/DE/logs/ZED",
      "echo '<?php return \"development-heroku\";' > config/Shared/console_env_local.php",
      "./deploy/heroku/run.sh"
    ],
    "post-install-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS",
      "GitHook\\Composer\\Scripts\\HookInstaller::installSprykerHooks",
      "GitHook\\Composer\\Scripts\\HookInstaller::installProjectHooks"
    ],
    "post-update-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS",
      "GitHook\\Composer\\Scripts\\HookInstaller::installSprykerHooks",
      "GitHook\\Composer\\Scripts\\HookInstaller::installProjectHooks"
    ],
    "phpstan": [
      "php -d memory_limit=512M vendor/bin/phpstan analyze -c phpstan.neon src/ -l 1"
    ],
    "phpstan-core": [
      "php -d memory_limit=2048M vendor/bin/phpstan analyze -c vendor/spryker/spryker/phpstan.neon vendor/spryker/spryker/Bundles/ -l 1"
    ],
    "phpstan-setup": "vendor/bin/console dev:ide:generate-auto-completion"
  }
}
