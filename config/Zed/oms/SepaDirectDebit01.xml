<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="process.xsd">
    <process name="SepaDirectDebit01" main="true">

        <subprocesses>
            <process>adyen capture</process>
            <process>export afterbuy</process>
        </subprocesses>

        <states>
            <state name="new"/>
            <state name="payment request sent"/>
            <state name="payment request valid"/>
            <state name="payment request invalid"/>
            <state name="authorisation notification received"/>
            <state name="invalid"/>
            <state name="paid"/>
        </states>

        <transitions>

            <transition happy="true">
                <source>new</source>
                <target>payment request sent</target>
                <event>send payment request</event>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseTransactionSuccess">
                <source>payment request sent</source>
                <target>payment request valid</target>
                <event>adyen check payment request</event>
            </transition>

            <transition>
                <source>payment request sent</source>
                <target>payment request invalid</target>
                <event>adyen check payment request</event>
            </transition>

            <transition>
                <source>payment request invalid</source>
                <target>invalid</target>
                <event>invalidate order</event>
            </transition>

            <transition>
                <source>invalid</source>
                <target>invalid</target>
                <event>redeem voucher</event>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseNotificationSuccess">
                <source>payment request valid</source>
                <target>authorisation notification received</target>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseNotificationSuccess">
                <source>authorisation notification received</source>
                <target>paid</target>
                <event>adyen check authorisation notification</event>
            </transition>

            <transition>
                <source>authorisation notification received</source>
                <target>invalid</target>
                <event>adyen check authorisation notification</event>
            </transition>

            <!-- SUBPROCESS CONNECTIONS -->

            <transition>
                <source>paid</source>
                <target>init capture process</target>
                <event>init capture</event>
            </transition>

            <transition>
                <source>captured</source>
                <target>init export to afterbuy</target>
                <event>init afterbuy export</event>
            </transition>

        </transitions>

        <events>
            <event name="send payment request" onEnter="true" manual="true" command="Adyen/Authorise"/>
            <event name="check authorisation" onEnter="false" manual="true"/>
            <event name="adyen check authorisation notification" onEnter="true"/>
            <event name="adyen check payment request" onEnter="true" />
            <event name="invalidate order" onEnter="true"/>
            <event name="redeem voucher" onEnter="true" command="TODO/RedeemVoucher"/>

            <!-- SUBPROCESS CONNECTIONS -->
            <event name="init capture" onEnter="true"/>
            <event name="init afterbuy export" onEnter="true"/>
        </events>

    </process>


    <process name="adyen capture" file="subprocesses/Capture01.xml"/>
    <process name="export afterbuy" file="subprocesses/ExportAfterBuy01.xml"/>

</statemachine>
