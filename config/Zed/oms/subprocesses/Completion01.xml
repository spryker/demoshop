<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../process.xsd">
    <process name="completion">
        <states>
            <state name="completed but returnable"/>
            <state name="completed success"/>
        </states>
        
        <transitions>
            <transition>
                <source>completed but returnable</source>
                <target>completed success</target>
                <event>not returned</event>
            </transition>
        </transitions>

        <events>
            <event name="not returned" timeout="100days"/>
        </events>
    </process>
</statemachine>
