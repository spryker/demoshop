<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../process.xsd">
    <process name="cancellation">
        <states>
            <state name="init cancellation"/>
            <state name="clarify refundable voucher code"/>
            <state name="clarify refund money"/>
            <state name="refunded"/>
        </states>

        <transitions>
            <transition>
                <source>init cancellation</source>
                <target>clarify refundable voucher code</target>
                <event>start refund checks</event>
            </transition>
            <transition>
                <source>clarify refundable voucher code</source>
                <target>clarify refund money</target>
                <event>voucher checked</event>
            </transition>
            <transition>
                <source>clarify refund money</source>
                <target>refunded</target>
                <event>refund done</event>
            </transition>
        </transitions>

        <events>
            <event name="start refund checks" manual="true"/>
            <event name="voucher checked" manual="true"/>
            <event name="refund done" manual="true"/>
        </events>
    </process>
</statemachine>
