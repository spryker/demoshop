<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../process.xsd">

    <process name="adyen capture">

        <states>
            <state name="init capture process"/>
            <state name="capture request sent"/>
            <state name="waiting for capture notification"/>
            <state name="capture notification received"/>
            <state name="clarify capture notification not received"/>
            <state name="clarify capture failed"/>
            <state name="captured"/>
        </states>

        <transitions>

            <transition happy="true">
                <source>init capture process</source>
                <target>capture request sent</target>
                <event>send capture request</event>
            </transition>

            <transition happy="true" condition="Adyen/IsCaptureTransactionSuccess">
                <source>capture request sent</source>
                <target>waiting for capture notification</target>
                <event>check capture request</event>
            </transition>

            <transition>
                <source>capture request sent</source>
                <target>clarify capture failed</target>
                <event>check capture request</event>
            </transition>

            <transition happy="true" condition="Adyen/HasCaptureNotificationReceived">
                <source>waiting for capture notification</source>
                <target>capture notification received</target>
            </transition>

            <transition>
                <source>waiting for capture notification</source>
                <target>clarify capture notification not received</target>
                <event>timeout missing capture notification</event>
            </transition>

            <transition condition="Adyen/HasCaptureNotificationReceived">
                <source>clarify capture notification not received</source>
                <target>capture notification received</target>
            </transition>

            <transition happy="true" condition="Adyen/IsCaptureNotificationSuccess">
                <source>capture notification received</source>
                <target>captured</target>
                <event>check capture notification</event>
            </transition>

            <transition>
                <source>capture notification received</source>
                <target>clarify capture failed</target>
                <event>check capture notification</event>
            </transition>

            <transition>
                <source>clarify capture failed</source>
                <target>init capture process</target>
                <event>retry capture</event>
            </transition>

        </transitions>

        <events>
            <event name="send capture request" command="Adyen/Capture" onEnter="true"/>
            <event name="check capture result"/>
            <event name="check capture request" onEnter="true"/>
            <event name="retry capture" manual="true"/>
            <event name="no capture notification received" manual="true"/>
            <event name="check capture notification" manual="true" onEnter="true"/>
            <event name="timeout missing capture notification" timeout="1days"/>
        </events>

    </process>

</statemachine>
