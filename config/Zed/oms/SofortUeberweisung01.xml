<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="process.xsd">
    <process name="SofortUeberweisung01" main="true">

        <subprocesses>
            <process>adyen capture</process>
            <process>export afterbuy</process>
        </subprocesses>

        <states>
            <state name="new" reserved="true"/>
            <state name="redirected"/>
            <state name="authorisation notification received"/>
            <state name="invalid" reserved="false"/>
            <state name="paid"/>
        </states>
        <transitions>

            <transition happy="true">
                <source>new</source>
                <target>redirected</target>
                <event>send payment request</event>
            </transition>

            <transition>
                <source>invalid</source>
                <target>invalid</target>
                <event>redeem voucher</event>
            </transition>

            <transition condition="Adyen/HasAuthoriseNotificationReceived" happy="true">
                <source>redirected</source>
                <target>authorisation notification received</target>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseNotificationSuccess" >
                <source>authorisation notification received</source>
                <target>paid</target>
                <event>check authorisation notification</event>
            </transition>

            <transition>
                <source>authorisation notification received</source>
                <target>invalid</target>
                <event>check authorisation notification</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>invalid</target>
                <event>adyen authorisation notification not received</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>invalid</target>
                <event>customer cancelled payment</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>invalid</target>
                <event>payment return with error</event>
            </transition>

            <!-- SUBPROCESS CONNECTIONS -->

            <transition>
                <source>paid</source>
                <target>init capture process</target>
                <event>init capture</event>
            </transition>

            <transition>
                <source>captured</source>
                <target>init export to afterbuy</target>
                <event>init afterbuy export</event>
            </transition>

        </transitions>

        <events>
            <event name="send payment request" onEnter="true" manual="true" command="Adyen/Authorise"/>
            <event name="check authorisation" onEnter="false" manual="true"/>
            <event name="redeem voucher" onEnter="true"/><!--  command="TODO/RedeemVoucher" -->
            <event name="adyen authorisation notification received" manual="true" onEnter="true"/>
            <event name="check authorisation notification" manual="true" onEnter="true"/>
            <event name="adyen authorisation notification not received" timeout="1hour"/>
            <event name="customer cancelled payment" />
            <event name="payment return with error" />

            <!-- SUBPROCESS CONNECTIONS -->
            <event name="init capture" onEnter="true"/>
            <event name="init afterbuy export" onEnter="true"/>
        </events>

    </process>

    <process name="adyen capture" file="subprocesses/Capture01.xml"/>
    <process name="export afterbuy" file="subprocesses/ExportAfterBuy01.xml"/>

</statemachine>
