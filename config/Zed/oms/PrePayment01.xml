<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="process.xsd">
    <process name="PrePayment01" main="true">

        <subprocesses>
            <process>export afterbuy</process>
        </subprocesses>

        <states>
            <state name="new"/>
            <state name="redirected"/>
            <state name="authorise notification received"/>
            <state name="invalid"/>
            <state name="waiting for authorise notification"/>
            <state name="clarify authorise notification not received"/>
            <state name="redirect payment timeout"/>
            <state name="customer cancelled payment" />
            <state name="cancelled payment after timeout" />
            <state name="ready to send confirmation mail" />
            <state name="payment error" />
            <state name="paid"/>
        </states>

        <transitions>

            <transition happy="true">
                <source>new</source>
                <target>redirected</target>
                <event>create redirect request</event>
            </transition>

            <transition condition="Adyen/HasPendingNotificationReceived" happy="true">
                <source>redirected</source>
                <target>waiting for authorise notification</target>
            </transition>

            <transition>
                <source>waiting for authorise notification</source>
                <target>waiting for authorise notification</target>
                <event>send order received mail</event>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseNotificationSuccess" >
                <source>authorise notification received</source>
                <target>ready to send confirmation mail</target>
                <event>adyen check authorise notification</event>
            </transition>

            <transition happy="true">
                <source>ready to send confirmation mail</source>
                <target>paid</target>
                <event>send order confirmation mail</event>
            </transition>

            <transition condition="Adyen/HasAuthoriseNotificationReceived" happy="true">
                <source>waiting for authorise notification</source>
                <target>authorise notification received</target>
            </transition>

            <transition>
                <source>waiting for authorise notification</source>
                <target>clarify authorise notification not received</target>
                <event>timeout missing authorise notification</event>
            </transition>

            <transition condition="Adyen/HasAuthoriseNotificationReceived">
                <source>clarify authorise notification not received</source>
                <target>authorise notification received</target>
            </transition>


            <transition>
                <source>authorise notification received</source>
                <target>invalid</target>
                <event>adyen check authorise notification</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>redirect payment timeout</target>
                <event>adyen timeout pending notification not received</event>
            </transition>

            <transition condition="Adyen/HasPendingNotificationReceived">
                <source>redirect payment timeout</source>
                <target>waiting for authorise notification</target>
            </transition>

            <transition>
                <source>redirect payment timeout</source>
                <target>cancelled payment after timeout</target>
                <event>adyen timeout payment cancellation</event>
            </transition>

            <transition>
                <source>cancelled payment after timeout</source>
                <target>invalid</target>
                <event>adyen invalidate timeout cancelled payment</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>customer cancelled payment</target>
                <event>adyen redirect payment cancelled</event>
            </transition>

            <transition>
                <source>customer cancelled payment</source>
                <target>invalid</target>
                <event>adyen invalidate cancelled payment</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>payment error</target>
                <event>adyen redirect payment error</event>
            </transition>

            <transition>
                <source>payment error</source>
                <target>invalid</target>
                <event>adyen invalidate error payment</event>
            </transition>

            <!-- SUBPROCESS CONNECTIONS -->

            <transition>
                <source>paid</source>
                <target>init export to afterbuy</target>
            </transition>

        </transitions>

        <events>
            <event name="create redirect request" onEnter="true" manual="true" command="Adyen/Authorise"/>
            <event name="check authorise" onEnter="false" manual="true"/>
            <event name="adyen authorise notification received" manual="true" onEnter="true"/>
            <event name="adyen check authorise notification" manual="true" onEnter="true"/>
            <event name="adyen check pending notification" onEnter="true"/>
            <event name="adyen timeout pending notification not received" timeout="1hour"/>
            <event name="adyen timeout invalidate redirect payment" timeout="1week"/>
            <event name="adyen redirect payment cancelled"/>
            <event name="adyen redirect payment error"/>
            <event name="adyen invalidate cancelled payment" onEnter="true" />
            <event name="adyen invalidate timeout cancelled payment" onEnter="true" />
            <event name="adyen invalidate error payment" onEnter="true" />
            <event name="adyen timeout payment cancellation" command="Adyen/Cancel" timeout="2days"/>
            <event name="send order confirmation mail" onEnter="true" command="OmsMailQueueConnector/OrderConfirmationMail"/>
            <event name="send order received mail" onEnter="true" command="TODO/DUMMY/ORDER-RECEIVED-MAIL"/>
            <event name="timeout missing authorise notification" timeout="1week"/>
        </events>

    </process>

    <process name="export afterbuy" file="subprocesses/ExportAfterBuy01.xml"/>

</statemachine>
