<?xml version="1.0" encoding="utf-8"?>
<statemachine
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="process.xsd">
    <process name="PayPal01" main="true">

        <subprocesses>
            <process>adyen capture</process>
            <process>export afterbuy</process>
        </subprocesses>

        <states>
            <state name="new"/>
            <state name="redirected"/>
            <state name="authorisation notification received"/>
            <state name="invalid"/>
            <state name="clarify redirect payment timeout"/>
            <state name="customer cancelled payment" />
            <state name="payment error" />
            <state name="paid"/>
        </states>

        <transitions>

            <transition happy="true">
                <source>new</source>
                <target>redirected</target>
                <event>send payment request</event>
            </transition>

            <transition>
                <source>invalid</source>
                <target>invalid</target>
                <event>redeem voucher for invalid order</event>
            </transition>

            <transition condition="Adyen/HasAuthoriseNotificationReceived" happy="true">
                <source>redirected</source>
                <target>authorisation notification received</target>
            </transition>

            <transition happy="true" condition="Adyen/IsAuthoriseNotificationSuccess" >
                <source>authorisation notification received</source>
                <target>paid</target>
                <event>adyen check authorisation notification</event>
            </transition>

            <transition>
                <source>authorisation notification received</source>
                <target>invalid</target>
                <event>adyen check authorisation notification</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>clarify redirect payment timeout</target>
                <event>adyen timeout authorisation notification not received</event>
            </transition>

            <transition>
                <source>clarify redirect payment timeout</source>
                <target>clarify redirect payment timeout</target>
                <event>redeem voucher for timed out order</event>
            </transition>

            <transition>
                <source>clarify redirect payment timeout</source>
                <target>invalid</target>
                <event>adyen timeout invalidate redirect payment</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>customer cancelled payment</target>
                <event>adyen redirect payment cancelled</event>
            </transition>

            <transition>
                <source>customer cancelled payment</source>
                <target>invalid</target>
                <event>adyen invalidate cancelled payment</event>
            </transition>

            <transition>
                <source>redirected</source>
                <target>payment error</target>
                <event>adyen redirect payment error</event>
            </transition>

            <transition>
                <source>payment error</source>
                <target>invalid</target>
                <event>adyen invalidate error payment</event>
            </transition>

            <!-- SUBPROCESS CONNECTIONS -->

            <transition>
                <source>paid</source>
                <target>init capture process</target>
                <event>init capture</event>
            </transition>

            <transition>
                <source>captured</source>
                <target>init export to afterbuy</target>
                <event>init afterbuy export</event>
            </transition>

        </transitions>

        <events>
            <event name="send payment request" onEnter="true" manual="true" command="Adyen/Authorise"/>
            <event name="check authorisation" onEnter="false" manual="true"/>
            <event name="redeem voucher for invalid order" onEnter="true" command="TODO/RedeemVoucher"/>
            <event name="redeem voucher for timed out order" onEnter="true" command="TODO/RedeemVoucher"/>
            <event name="adyen authorisation notification received" manual="true" onEnter="true"/>
            <event name="adyen check authorisation notification" manual="true" onEnter="true"/>
            <event name="adyen timeout authorisation notification not received" timeout="1hour"/>
            <event name="adyen timeout invalidate redirect payment" timeout="1week"/>;
            <event name="adyen redirect payment cancelled" command="Nofification/MailToDavid1"/>
            <event name="adyen redirect payment error" command="Nofification/MailToDavid2"/>
            <event name="adyen invalidate cancelled payment" onEnter="true" />;
            <event name="adyen invalidate error payment" onEnter="true" />;

            <!-- SUBPROCESS CONNECTIONS -->
            <event name="init capture" onEnter="true"/>
            <event name="init afterbuy export" onEnter="true"/>
        </events>

    </process>

    <process name="adyen capture" file="subprocesses/Capture01.xml"/>
    <process name="export afterbuy" file="subprocesses/ExportAfterBuy01.xml"/>

</statemachine>
