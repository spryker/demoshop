<?xml version="1.0"?>
<database name="zed"
          package="vendor/spryker/zed-package/src/ProjectA/Zed/ProductSearch/Persistence/Propel"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="pac_product_search_attributes_operation">
        <column name="source_attribute_id" type="INTEGER" required="true" primaryKey="true"/>
        <column name="operation" type="VARCHAR" required="true" primaryKey="true"/>
        <column name="target_field" type="VARCHAR" required="true" primaryKey="true"/>
        <column name="weighting" type="INTEGER" required="true" defaultValue="0"/>

        <index>
            <index-column name="source_attribute_id"/>
            <index-column name="weighting"/>
        </index>
        
        <foreign-key foreignTable="pac_attributes_metadata" onDelete="cascade">
            <reference local="source_attribute_id" foreign="attribute_id"/>
        </foreign-key>
    </table>
    <table name="pac_searchable_products">
        <column name="searchable_id" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_product" type="INTEGER"/>
        <column name="fk_locale" type="INTEGER" />
        <column name="is_searchable" type="BOOLEAN" defaultValue="true"/>
        
        <foreign-key foreignTable="pac_product">
            <reference local="fk_product" foreign="product_id" />
        </foreign-key>
        <foreign-key foreignTable="pac_locale">
            <reference local="fk_locale" foreign="id_locale" />
        </foreign-key>
    </table>
</database>