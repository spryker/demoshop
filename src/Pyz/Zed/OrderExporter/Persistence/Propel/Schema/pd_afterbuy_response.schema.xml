<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd" namespace="Orm\Zed\OrderExporter\Persistence" package="src.Orm.Zed.OrderExporter.Persistence">

    <table name="pd_afterbuy_response" phpName="PdAfterbuyResponse">
