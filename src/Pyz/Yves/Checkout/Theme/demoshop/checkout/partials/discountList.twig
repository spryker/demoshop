{% for discount in cart.totals.discount.discountItems %}
    <div class="cart__coupon-name">
        {{ discount.name }}
        {% if discount.codes is not empty %}
            <a href="#" class="cart__remove-coupon-link js-cart__remove-coupon-link" data-coupon-code="{{ discount.codes | first }}"></a>
        {% endif %}
    </div>
    <div>
        - {{ discount.amount | price }}
    </div>
    <div style="clear:both"></div>
{% endfor %}