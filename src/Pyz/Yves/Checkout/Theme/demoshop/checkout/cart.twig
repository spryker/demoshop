{% spaceless %}
    <div class="cart__items js-cart-items">
        {% for item in cart.items %}
            {% include '@application/layout/content/product/cart/cart-item.twig' with {
                title: item.name,
                weight: '250g',
                quantity: item.quantity,
                price: item.grossPrice,
                sku: item.sku,
                groupKey: item.groupKey,
                product: products[item.sku]
            } %}
        {% endfor %}


        {% for expense in cart.expenses %}
            <div class="cart-position">
                <div class="cart-position__left"></div>
                <div class="cart-position__right">
                    {{ expense.name }}
                    <span class="cart-position__price">{{ expense.grossPrice | price }}<span>
                </div>
            </div>
        {% endfor %}


        {% block discounts %}
            {% include "@checkout/checkout/partials/discountList.twig" %}
        {% endblock %}


        <div class="cart-position cart-position--total">
            <div class="cart-position__left">
                <div class="js-voucher-form" style="display: none;">
                    <input type="hidden" id="checkoutAddCouponUrl" value="{{ url('checkout/add-coupon') }}">
                    <input type="hidden" id="checkoutRemoveCouponUrl" value="{{ url('checkout/remove-coupon') }}">

                    {% include '@application/layout/common/forms/input.twig' with {
                        id: 'cart__coupon-code',
                        label: 'Gutschein'
                    } %}

                    {% include '@application/layout/common/forms/button.twig' with {
                        modifier: 'cta js-cart-use-coupon-button-code',
                        title: 'Gutschein einlösen',
                        type: 'button'
                    } %}
                </div>

                <div class="cart-position--voucher js-voucher-form-trigger">
                    Gutschein einlösen
                </div>
            </div>
            <div class="cart-position__right">
                {% if cart.totals is defined and cart.totals is not null %}
                    Gesamtbetrag
                    <span class="cart-position__price">{{ cart.totals.grandTotalWithDiscounts | price }}</span>
                {% endif %}
            </div>
        </div>


    </div>
{% endspaceless %}