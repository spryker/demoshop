<li>
    {{ item.quantity }}
    <span class="__secondary">&times;</span>
    {{ item.name }} - <strong>{{ item.sumGrossPrice | money }}</strong>

    {% if bundleItems is defined %}
        <br />
        <small>
        <li>{{ 'checkout.summary.item.bundle.description' | trans }}</li>

        {% for bundleItem in bundleItems %}
            <li> - {{ bundleItem.quantity }} x {{ bundleItem.name }}  </li>
        {% endfor %}
         </small>
    {% endif %}

    {% if item.productOptions|length > 0 %}
        <br />
        <small>{{ 'checkout.summary.item.option.description' | trans }} </small> <br />
        {% for productOption in item.productOptions %}
            &nbsp; <small> + {{ productOption.value | trans }} <strong>{{ productOption.sumGrossPrice | price }}</strong> </small> <br />
        {% endfor %}
    {% endif %}

    {% if not loop.last %}
        <hr>
    {% else %}
        <div class="clearfix"></div>
    {% endif %}
</li>
