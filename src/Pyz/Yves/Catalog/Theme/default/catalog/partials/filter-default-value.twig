<input type="radio"
    id="filter-{{ filterName }}-{{ value }}"
    name="filter-{{ filterName }}"
    value="{{ value }}"
    {% if default is defined and default == true %}
        checked=checked
        class="js-filter-default-value"
    {% endif %}>
<label for="filter-{{ filterName }}-{{ value }}">{{ displayValue }}
    <span class="filter__quantity">{{ quantity }}</span>
</label>
