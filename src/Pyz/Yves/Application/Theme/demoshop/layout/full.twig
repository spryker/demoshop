<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width" />
        {% block metatags %}{% endblock %}
        <link rel="icon" type="image/vnd.microsoft.icon" href="/images/favicon.ico">
        <link rel="stylesheet" type="text/css" href="{{ asset('/styles/initial.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('/styles/global.css') }}" />

        <script src="{{ asset('/scripts/vendor/jquery-min.js') }}"></script>
        <script src="{{ asset('/scripts/vendor/modernizr-2.6.2-respond-1.1.0.min.js') }}"></script>

        <script src="{{ asset('/scripts/app/main.js') }}"></script>
        <script src="{{ asset('/scripts/app/ui.js') }}"></script>
        <script>
            // hardcoded
            app.vars.storeLocale = 'US';
        </script>
    {% endblock %}
</head>
<body>

<section>
    <header>
        <div class="row">
            <a href="/" id="logo" class="col col33">
                <img src="{{ asset('/images/logo.svg') }}" alt="logo" class="logo" />
            </a>
            <div class="col col67 hideonprint">
                <ul class="usps">
                    <li><span class="glyphicon glyphicon-refresh"></span>{{ 'header.usp.return'|trans }}</li>
                    <li><span class="glyphicon glyphicon-gift"></span>{{ 'header.usp.shipping'|trans }}</li>
                    <li><span class="glyphicon glyphicon-phone-alt"></span>{{ 'header.phone'|trans }}</li>
                </ul>
            </div>
        </div>
    </header>
</section>

{% block content %}{% endblock %}

<footer>
    {% block footer %}
    <section class="transparent">
        <div class="col col66">
            <div class="row">
                <a class="icon-spryker-logo" href="http://spryker.com"><span class="poweredBy">Powered by</span></a>
            </div>
        </div>
        <div class="col col34">
            <h4>{{ 'footer.information'|trans }}</h4>
            <hardcoded block>
            <ul>
                <li><a href="/agb">Terms of Service</a></li>
                <li><a href="/impressum">Imprint</a></li>
                <li><a href="/datenschutz">Privacy</a></li>
                <li><a href="/widerrufsrecht">Withdrawal</a></li>
                <li><a href="/ruecksendungen">Returns</a></li>
                <li><a href="/kontakt">Contact</a></li>
                <li><a href="/faq">FAQ</a></li>
            </ul>
            </hardcoded>
        </div>
    </section>
    {% endblock %}
    <script type="text/javascript">
        var $buoop = {};
        $buoop.ol = window.onload;
        window.onload=function(){
            try {if ($buoop.ol) $buoop.ol();}catch (e) {}
            var e = document.createElement("script");
            e.setAttribute("type", "text/javascript");
            e.setAttribute("src", "http://browser-update.org/update.js");
            document.body.appendChild(e);
        }
    </script>
</footer>

<link rel="stylesheet" href="{{ asset('/styles/responsive.css') }}" />
</body>
</html>
