<div class="menu">
    {% include '@application/layout/common/close-button.twig' %}

    <div class="menu__slider">

        {% for menu in data.menus %}
            <div class="menu__inner">
                {% include '@application/layout/header/menu-teaser-full.twig' with {
                    headline: menu.main.headline,
                    image: menu.main.image,
                    button: menu.main.button.title,
                    button2: menu.main.button.title2,
                    url: menu.main.button.url
                } %}

                <div class="menu__bottom">
                    {% for teaser in menu.teasers %}
                        {% include '@application/layout/header/menu-teaser-' ~ teaser.type ~ '.twig' with {
                            modifier: teaser.modifier,
                            title: teaser.title,
                            url: teaser.url
                        } %}

                        {% if loop.index == 1 %}
                            {% if menu.product is defined %}
                                {% include '@application/layout/header/menu-teaser-product.twig' with { product: menu.product } %}
                            {%  endif %}
                        {%  endif %}

                    {% endfor %}
                </div>
            </div>
        {% endfor %}

        {% if app.request.attributes.get('_route') != 'checkout' %}
            {% include '@application/layout/header/cart-layer.twig' %}
        {% endif %}

    </div>
</div>
