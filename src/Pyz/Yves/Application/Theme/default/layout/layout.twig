<!DOCTYPE html>
<html lang="{{ locale | default('en') }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <meta name="description" content="{{ page_description | default('') }}">
    <meta name="keywords" content="{{ page_keywords | default('') }}">
    <meta name="author" content="Spryker System GmbH">
    <link rel="icon" href="/images/favicon.ico">

    <title>{{ page_title | default('Spryker Demoshop') | trans }}</title>

    <meta name="description" content="{{ page_description | default('') | trans }}" />
{% block page_meta %}{% endblock %}

{% block css %}
    {#<link href='http://fonts.googleapis.com/css?family=Fira+Sans:300,400,500' rel='stylesheet' type='text/css'>#}
    <link rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/bower/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/yves-new.css" />
{% endblock css %}

</head>
<body>

{% block body %}

    <nav class="navbar navbar-spryker navbar-fixed-top">
        <div class="container-fluid navigation-bar">
            <div class="navbar-header">
                <button data-target=".bs-example-js-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">{{ 'Toggle navigation' | trans }}</span>
                    <span class="icon-bar"></span> <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand2 shop-logo" title="{ 'global.spryker.shop' | trans }"></a>
            </div>
            <div class="collapse navbar-collapse bs-example-js-navbar-collapse">
                <div class="text-center">
                    <div class="pull-right header-nav-placeholder">
                        <div class="header-cart pull-right"><a href=""><i class="fa fa-shopping-cart fa-inverse"></i></a></div>
                        <div class="js-search pull-right">
                            <form action="/search">
                                <button class="btn js-search-button"><i class="fa fa-search"></i></button>
                                <input type="text" class="search--box js-search-box" name="q" />
                            </form>
                        </div>
                    </div>
                    <a href="" class="header-categories-dropdown"><i class="fa fa-bars"></i></a>
                </div>
            </div>
        </div>
        <div class="header-categories container-fluid hidden">
            <div class="row">
                <div class="col-md-12">
                    <ul>
                        <li><a href="/de/meere"><img src="/images/nav/sealife.jpg" alt=""></a></li>
                        <li><a href=""><img src="/images/nav/wildlife.jpg" alt=""></a></li>
                        <li><a href=""><img src="/images/nav/waldnwiese.jpg" alt=""></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="homepage-gallery">
        <div class="row col--height-3">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/gorilla.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/penguin.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="homepage-thumbnail" style="background-image: url(/images/homepage/dragon.jpg);">
                    <h1><a href="">Gorilla</a></h1>
                    <h2><a href="">Wild Animals</a></h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row col--height-1">
                    <div class="col-md-12">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/teaser-waldwiese.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/sea.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row col--height-2">
                    <div class="col-md-6">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/ferkel.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="homepage-thumbnail" style="background-image: url(/images/homepage/flusspferd.jpg);">
                            <h1><a href="">Gorilla</a></h1>
                            <h2><a href="">Wild Animals</a></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {% for i in 1..60 %}
    <p class="asd">&nbsp;</p>
    {% endfor %}

    {% block content2 %}{% endblock %}

    {#{% include "@application/layout/partials/footer.twig" %}#}
    {#{% include "@application/layout/partials/overlay.twig" %}#}

    {% block footer_js %}
    <script src="/bower/jquery/dist/jquery.min.js"></script>
    <script src="/bower/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/yves-new.js"></script>
    {% endblock footer_js %}

{% endblock body %}

</body>
</html>
