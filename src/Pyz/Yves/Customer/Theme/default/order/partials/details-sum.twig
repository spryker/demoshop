<div class="columns text-right">
    {{ 'customer.order.subTotal' | trans }}: {{ order.totals.subtotal | money }}<br/>
    {% for expense in order.expenses %}
        {{ 'customer.order.shipment' | trans }} {{ expense.name }}: {{ expense.unitPrice | money }}<br/>
    {% endfor %}

    {{ 'customer.order.discount.total' | trans }}: -{{ order.totals.discountTotal | money }}<br/>

    {% if order.totals.canceledTotal %}
        {{ 'customer.order.canceledTotal' | trans }}: -{{ order.totals.canceledTotal | money }}<br/>
    {% endif %}

    <strong>{{ 'customer.order.grandTotal' | trans }}: {{ order.totals.grandTotal | money }}</strong>
</div>
