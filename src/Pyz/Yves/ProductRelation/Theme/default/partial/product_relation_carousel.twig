{% if productRelations %}
<div class="row">
    <div class="small-12 columns">
        <div class="callout">
            <h3>{{ name }}</h3>
            <div class="row align-spaced">
                <div class="small-11 columns">
                    <div class="carousel" data-component="carousel">
                    {% for relation in productRelations %}

                        {% include "@catalog/catalog/partials/product.twig" with {
                            idProductAbstract: relation.idProductAbstract,
                            detailsUrl: relation.url,
                            name:relation.name,
                            priceValue: relation.price,
                            originalPrice: (relation.prices.ORIGINAL is defined ? relation.prices.ORIGINAL : null),
                            product: relation,
                            imageUrl: (relation.imageSets|length ? relation.imageSets.default[0].externalUrlSmall : ''),
                            productLabels: spyProductAbstractLabels(relation.idProductAbstract, '@Catalog/catalog/partials/product-labels.twig')
                        } %}

                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
