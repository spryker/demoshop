{% extends "@application/layout/layout.twig" %}
{% block content %}
    {{ dump(unsubscriptionResults) }}
    {% for unsubscriptionResult in  unsubscriptionResults %}
    {% include "@application/layout/header.twig" %}
    <div class="newsletter_message">
        {% if unsubscriptionResult.isSuccess == true %}
            <div class="newsletter-success-headline">
                {{ 'newsletter.unsubscription.success.headline' | trans }}
            </div>
            <div class="newsletter-message-details">
                {{ 'newsletter.unsubscription.success.message' | trans }}
            </div>
        {% else %}
            <div class="newsletter-error-headline">
                {{ 'newsletter.unsubscription.error.headline' | trans }}
            </div>
            <div class="newsletter-message-details">
                {{ unsubscriptionResult.errorMessage | trans }}
            </div>
        {% endif %}
    </div>
    {% endfor %}
    {% include "@application/layout/footer.twig" %}
{% endblock %}
