{% set templatePath = '@catalog/catalog/partials/product-without-groups.twig' %}
{% if displayGroups == true %}
     {% set templatePath = '@catalog/catalog/partials/product.twig' %}
{% endif %}

<div class="row">
    <div class="small-12 columns">
        <div class="callout">
            <h3>products</h3>
            <div class="row align-spaced">
                <div class="small-11 columns">
                    <div class="carousel" data-component="carousel">
                        {% for product in products if product.available %}

                            {% include templatePath with {
                                idProductAbstract: product.idProductAbstract,
                                detailsUrl: product.url,
                                name: product.name,
                                priceValue: product.price,
                                product: product,
                                imageUrl: (product.imageSets|length ? product.imageSets.default[0].externalUrlSmall : ''),
                                originalPrice: (product.prices.ORIGINAL is defined ? product.prices.ORIGINAL : null)
                            } %}

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
