{% extends "@application/layout/layout.twig" %}

{% block meta_title %}{{ product.meta_title }}{% endblock %}
{% block meta_description %}{{ product.meta_description }} {% endblock %}
{% block meta_keywords %}{{ product.meta_description }}{% endblock %}


{% set headerBlocks = [
    '@application/layout/content/product/details/header-options-narrow.twig'
] %}


{% block content %}

<div class="product">

    <div class="product__detail">

        <div class="product__gallery">
            {% include '@application/layout/content/product/details/product-gallery.twig' with {
                product: product
            } %}
        </div>

        <div class="product__info">
            {% include '@application/layout/content/product/details/product-intro.twig' with {
                product: product
            } %}

            {% include '@application/layout/content/product/details/product-content.twig' with {
                product: product
            } %}
        </div>

        <div class="product__options">
            {% include '@application/layout/content/product/details/product-options.twig' with {
                product: product
            } %}
        </div>
    </div>

    <div class="product__features">
        {% include '@application/layout/content/product/details/product-features.twig' with {
            product: product
        } %}
    </div>

    {% include '@application/layout/content/product/details/product-accordion.twig' with {
        product: product
    } %}

    {% include '@application/layout/content/product/details/product-related.twig' with {
        product: product
    } %}


    {% if options is not empty %}
        {% include '@application/layout/content/product/details/product-configurator.twig' %}
    {% endif %}
</div>

{% endblock %}
